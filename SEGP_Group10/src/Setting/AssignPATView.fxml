<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Tab fx:id="tab" text="Untitled Tab" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Setting.AssignPAT">
    <content>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <top>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox prefHeight="134.0" spacing="20.0">
                            <children>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <JFXRadioButton fx:id="patListButton" text="PAT List" />
                                        <JFXRadioButton fx:id="studentListButton" text="Student List" />
                                    </children>
                                    <padding>
                                        <Insets top="20.0" />
                                    </padding>
                                </HBox>
                                <JFXTextField fx:id="filePathField" labelFloat="true" prefWidth="1500.0" promptText="Upload A CSV File" />
                                <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <JFXButton onMouseClicked="#browseButtonOnClicked" prefWidth="100.0" text="Browse" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
            </top>
            <left>
                <JFXListView fx:id="listView" onMouseClicked="#listViewOnClicked" prefHeight="330.0" prefWidth="223.0" stylesheets="@patsinfocss.css" BorderPane.alignment="CENTER" />
            </left>
            <bottom>
                <HBox alignment="BOTTOM_RIGHT" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <JFXButton onMouseClicked="#manualAllocationClicked" text="Manually Allocate" />
                        <JFXButton fx:id="delete" alignment="BOTTOM_RIGHT" onMouseClicked="#autoAllocatesClicked" text="Auot Allocate" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </HBox>
            </bottom>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <JFXTextField fx:id="searchTextField" labelFloat="true" promptText="Search" />
                        <JFXTreeTableView fx:id="tableView" stylesheets="@TreeTableView.css" />
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </content>
</Tab>
